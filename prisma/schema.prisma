generator client {
  provider        = "prisma-client"
//  output = "../generated/prisma"
  moduleFormat = "cjs"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider   = "postgresql"
}

model Blogpost {
  id String @id @default(uuid())
  title String
  content String
  imageUrl String
  authorId String
  authorName String
  authorImage String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}